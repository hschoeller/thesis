@article{michelDynamicalDriversGreenland2021,
  title = {Dynamical Drivers of {{Greenland}} Blocking in Climate Models},
  author = {Michel, Clio and Madonna, Erica and Spensberger, Clemens and Li, Camille and Outten, Stephen},
