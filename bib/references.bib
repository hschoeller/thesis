@article{buelerYearroundSubseasonalForecast2021,
  title = {Year‐round Sub‐seasonal Forecast Skill for Atlantic–European Weather Regimes},
  author = {Büeler, Dominik and Ferranti, Laura and Magnusson, Linus and Quinting, Julian F. and Grams, Christian M.},
  date = {2021-10},
  journaltitle = {Quarterly Journal of the Royal Meteorological Society},
  shortjournal = {Q. J. R. Meteorolog. Soc.},
  volume = {147},
