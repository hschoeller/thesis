@article{hirtStatisticsDynamicsBlockings2018,
  title = {Statistics and Dynamics of Blockings with a Point Vortex Model},
  author = {Hirt, Mirjam and Schielicke, Lisa and Muller, Annette and Nevir, Peter},
  date = {2018-01-01},
  journaltitle = {Tellus A: Dynamic Meteorology and Oceanography},
  volume = {70},
