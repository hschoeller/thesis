@article{wirthRossbyWavePackets2018,
  title = {Rossby Wave Packets on the Midlatitude Waveguide—a Review},
  author = {Wirth, Volkmar and Riemer, Michael and Chang, Edmund K. M. and Martius, Olivia},
  date = {2018-07-01},
  journaltitle = {Monthly Weather Review},
  shortjournal = {Mon. Weather Rev.},
  volume = {146},
