@article{pfahlWarmConveyorBelts2014,
  title = {Warm {{Conveyor Belts}} in the {{ERA-Interim Dataset}} (1979–2010). {{Part II}}: {{Moisture Origin}} and {{Relevance}} for {{Precipitation}}},
