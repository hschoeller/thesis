@article{maddisonImpactModelUpgrades2020,
  title = {Impact of Model Upgrades on Diabatic Processes in Extratropical Cyclones and Downstream Forecast Evolution},
  author = {Maddison, Jacob W. and Gray, Suzanne L. and Martínez-Alvarado, Oscar and Williams, Keith D.},
  date = {2020-04},
  journaltitle = {Quarterly Journal of the Royal Meteorological Society},
  shortjournal = {Q. J. R. Meteorolog. Soc.},
  volume = {146},
