@article{hoheneggerPredictabilityErrorGrowth2007,
  title = {Predictability and Error Growth Dynamics in Cloud-Resolving Models},
  author = {Hohenegger, Cathy and Schär, Christoph},
  date = {2007-12-01},
  journaltitle = {Journal of the Atmospheric Sciences},
  shortjournal = {J. Atmos. Sci.},
