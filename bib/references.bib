@article{steinfeldResponseMoistDry2022,
  title = {Response of Moist and Dry Processes in Atmospheric Blocking to Climate Change},
  author = {Steinfeld, Daniel and Sprenger, Michael and Beyerle, Urs and Pfahl, Stephan},
  date = {2022-08-01},
  journaltitle = {Environmental Research Letters},
  shortjournal = {Environ. Res. Lett.},
  volume = {17},
